@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="jumbotron">
  <h1>Stylists</h1>
  <hr>
</div>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<p class="btn btn-light">@Html.ActionLink("Add New Stylist", "Create")</p>
<p class="btn btn-light">@Html.ActionLink("Return Home", "Index", "Home")</p>