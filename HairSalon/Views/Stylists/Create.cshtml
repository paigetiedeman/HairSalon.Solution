@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="jumbotron">
  <h3>Add a New Stylist</h3>
  <hr>
</div>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })

  <br>
  <input type="submit" value="Add New Stylist" class="btn btn-light"/>
}

<p class="btn btn-light">@Html.ActionLink("Show All Stylists", "Index")</p>