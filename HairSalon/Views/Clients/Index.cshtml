@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Client List:</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added!</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | </li>
}

<br>
<p class="btn btn-light">@Html.ActionLink("Add New Client", "Create")</p>
<p class="btn btn-light">@Html.ActionLink("Return Home", "Index", "Home")</p>