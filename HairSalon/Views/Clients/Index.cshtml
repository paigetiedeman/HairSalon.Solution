@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="jumbotron">
  <h1>Client List:</h1>
  <hr>
</div>

@if (@Model.Count == 0)
{
  <h4>No Clients have been added!</h4>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
    <ol>
      <li>@client.Service</li>
    </ol>
}

<br>
<p class="btn btn-light">@Html.ActionLink("Add New Client", "Create")</p>
<p class="btn btn-light">@Html.ActionLink("Return Home", "Index", "Home")</p>