@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h3>Add a New Client</h3>
<hr>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId", null, new { @class = "form-control" })

  <input type="submit" value="Add New Client" class="btn btn-dark" />
}

<p class="btn btn-dark">@Html.ActionLink("Show All Clients", "Index")</p>