@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="jumbotron">
  <h3>Add a New Client</h3>
  <hr>
</div>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId", null, new { @class = "form-control" })

  <input type="submit" value="Add New Client" class="btn btn-light" />
}

<p class="btn btn-light">@Html.ActionLink("Show All Clients", "Index")</p>